<% provide(:title, "Edit #{resource_name.to_s.humanize}") %>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <%= image_tag 'web_hi_res_512.png', class: 'image' %>
      <div class="content">
        Edit <%= resource_name.to_s.humanize %>
      </div>
    </h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'large', html: { method: :put }) do |f| %>
      <div class="ui stacked segment">
        <%= f.input :name, label: false do %>
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.input_field :name, required: false, autofocus: true, placeholder: 'Name' %>
          </div>
        <% end %>

        <%= f.input :email, label: false do %>
          <div class="ui left icon input">
            <i class="mail icon"></i>
            <%= f.input_field :email, required: false, autofocus: true, placeholder: 'E-mail address' %>
          </div>
        <% end %>

        <%= f.input :phone, label: false do %>
          <div class="ui left icon input">
            <i class="phone icon"></i>
            <%= f.input_field :phone, required: false, autofocus: true, placeholder: 'Phone' %>
          </div>
        <% end %>

        <%= f.input :telegram, label: false do %>
          <div class="ui left icon input">
            <i class="telegram icon"></i>
            <%= f.input_field :telegram, required: false, autofocus: true, placeholder: 'Telegram' %>
          </div>
        <% end %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, label: false do %>
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.input_field :password, autocomplete: "off", required: false, placeholder: 'Password', hint: "leave it blank if you don't want to change it" %>
          </div>
        <% end %>

        <%= f.input :password_confirmation, label: false do %>
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.input_field :password_confirmation, required: false, placeholder: "Password confirmation" %>
          </div>
        <% end %>

        <%= f.input :current_password, label: false do %>
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.input_field :current_password, required: true, placeholder: "Current password", hint: "we need your current password to confirm your changes" %>
          </div>
        <% end %>

        <%= f.button :submit, "Update", class: 'ui fluid large teal submit button' %>
      </div>

      <div class="ui error message"><%= f.error_notification %></div>

    <% end %>

    <div class="ui message">
      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>