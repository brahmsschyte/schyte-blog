<!DOCTYPE html>
<html>
  <head>
    <!-- Standard Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <!-- Site Properties -->
    <%= display_meta_tags site: site_title, reverse: true, description: yield(:description), keywords: yield(:keywords), icon: [{href: '/favicon.png', type: 'image/png'}] %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    params[:controller] %>
    <%= javascript_include_tag params[:controller] %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', '<%= site_ga_tracking_id %>', 'auto');
      ga('send', 'pageview');
    </script>
  </head>

  <body>
    <%= render "shared/navbar" %>
    <div class="pusher">
      <div class="ui grid container">
        <div class="thirteen wide column">
          <div id="content" class="ui fluid container">
            <%= render "shared/message" %>
            <%= yield %>
            <%= debug(params) if Rails.env.development? %>
          </div>
        </div>
        <div id="sidebar" class="three wide column">
          <%= render "shared/sidebar" %>
        </div>
      </div>
      <%= render "shared/footer" %>
    </div>
  </body>
</html>
