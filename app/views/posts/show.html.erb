<p>
  <strong>Title:</strong>
  <%= title @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= sanitize(@post.body) %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @post.tags %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @post.slug %>
</p>

<p>
  <strong>Visibility:</strong>
  <%= @post.visibility %>
</p>

<p>
  <strong>Draft:</strong>
  <%= @post.draft ? '<i class="checkmark icon"></i>'.html_safe : nil %>
</p>

<p>
  <strong>Featured Image:</strong>
  <%= image_tag @post.featured_image if @post.featured_image %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Keywords:</strong>
  <%= @post.keywords %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.user.name %>
</p>

<p>
  <strong>Published:</strong>
  <%= @post.published_at.strftime('%-d %b %Y, %I:%M %P') if @post.published_at %>
</p>

<p>
  <strong>Created:</strong>
  <%= @post.created_at.strftime('%-d %b %Y, %I:%M %P') if @post.created_at %>
</p>

<p>
  <strong>Updated:</strong>
  <%= @post.updated_at.strftime('%-d %b %Y, %I:%M %P') if @post.updated_at %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
